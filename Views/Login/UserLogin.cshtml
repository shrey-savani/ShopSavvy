@model User
@{
    Layout = null;
    string error = ViewBag.Error;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShopSavvy.styles.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Playfair+Display' rel='stylesheet' type='text/css'>
    <link href="https://fonts.cdnfonts.com/css/nunito-sans" rel="stylesheet">
</head>
<body class="text-center p-5">
    <header class="mb-3">
        <h2 class="text-primary">User Login</h4>
    </header>
    <div class="container">
        <form method="POST">
            <div class="form-group row mb-3">
                <label asp-for="Username" class="col-sm-2 col-md-3 col-lg-3 col-form-label">Username</label>
                <div class="col-sm-10 col-md-6 col-lg-6">
                    <input asp-for="Username" class="form-controll" placeholder="Enter Username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Password" class="col-sm-2 col-md-3 col-lg-3 col-form-label">Password</label>
                <div class="col-sm-10 col-md-6 col-lg-6">
                    <input asp-for="Password" type="password" class="form-controll" placeholder="Enter Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-2">
                @if (error != null)
                {
                    <span class="text-danger">@error</span>
                }
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </div>
        </form>

        <div class="mt-3 link-container">
            <p>not having account? <a asp-action="RegisterUser">register</a> here</p>
            <p>admin? <a asp-action="AdminLogin">login</a> here.</p>
        </div>
    </div>

</body>
</html>
