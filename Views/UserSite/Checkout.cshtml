@model Order
@{
    Layout = "~/Views/Shared/User_Layout.cshtml";
    ViewData["Title"] = "Checkout";
}

<form method="post">
    <div class="form-row p-3">
        <div class="form-group col-md-4">
            <label asp-for="ShippingAddress">Address</label>
            <input asp-for="ShippingAddress" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="City">City</label>
                <input asp-for="City" type="text" class="form-control" id="inputCity" />
                <span asp-validation-for="City" class="text-danger"></span>

            </div>
            <div class="form-group col-md-4">
                <label asp-for="State">State</label>
                <input asp-for="State" type="text" class="form-control" id="inputCity" />
                <span asp-validation-for="State" class="text-danger"></span>

            </div>
            <div class="form-group col-md-4">
                <label asp-for="ZipCode">Zip</label>
                <input asp-for="ZipCode" type="text" class="form-control" id="inputZip">
                <span asp-validation-for="ZipCode" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="PhoneNumber">PhoneNumber</label>
            <input asp-for="PhoneNumber" type="text" class="form-control" id="inputPhoneNumber" placeholder="i.e. 123-456-7890">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        </div>
        <button type="submit" class="mt-3 btn btn-primary">Confirm Order</button>
    </div>
</form>